# filename: .env.example
PORT=3000
LOG_LEVEL=info

# Body limits
JSON_LIMIT=20mb
HTML_LIMIT=20mb

# PDF size policy
PDF_MAX_BYTES_DEFAULT=10485760   # 10 MB default
PDF_MAX_BYTES_CAP=26214400       # 25 MB absolute cap
# Client darf maxBytes im Request mitschicken (wird auf CAP geclamped)

# Rendering & Sanitizing
PUPPETEER_HEADLESS=new
RENDER_TIMEOUT_MS=45000
PDF_MINIFY_HTML=1
PDF_STRIP_SCRIPTS=1
PDF_STRIP_PAGE_AT_RULES=1

# Response preference
# 0 = standardmäßig application/pdf; 1 = JSON(base64)
RETURN_JSON_BASE64=0

# Rate limit
RATE_LIMIT_PER_MIN=120
