# filename: .env.example
# --- Core ---
PORT=8000
LOG_LEVEL=info
ALLOW_ORIGINS=*
MAX_HTML_SIZE_BYTES=2000000
DEFAULT_FORMAT=A4
DEFAULT_MARGIN_MM=12,12,12,12
PUPPETEER_HEADLESS=new
PUPPETEER_PROTOCOL_TIMEOUT=180000

# --- Optional: JSON/body limits for Express ---
JSON_LIMIT=10mb
HTML_LIMIT=10mb
RATE_LIMIT_PER_MIN=60

